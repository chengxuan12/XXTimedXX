<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 引入jdbc配置文件 -->
    <context:property-placeholder location="classpath:conf/jdbc.properties"/>

    <!-- 扫描文件 -->
    <context:component-scan base-package="cn.timed.*"/>
    <context:component-scan base-package="cn.timed.controller"/>
    <context:component-scan base-package="cn.timed.dao"/>
    <context:component-scan base-package="cn.timed.domain"/>
    <context:component-scan base-package="cn.timed.service.Im"/>
    <context:component-scan base-package="cn.timed.service"/>


</beans>